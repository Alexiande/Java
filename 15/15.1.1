package ru.mirea.lab7;

import java.util.ArrayList;

public class ArrayListApp {
    public static void main(String[] args) {

        ArrayList<String> states = new ArrayList<String>();

        states.add("Россия");
        states.add("США");
        states.add("Германия");
        states.add(0,"Великобритания");

        System.out.printf("В списке states содержится %d стран(ы)\n", states.size());

        for (String state : states){
            System.out.print(state+" ");
        }

        if(states.contains("Россия")){
            System.out.println("\nВ списке содержится страна Россия");
        }else{
            System.out.println("\nУказанной страны нет в списке");
        }

        states.remove("Германия");

        System.out.printf("Страна %s находтся в списке под номером %d\n",states.get(states.indexOf("Великобритания")),states.indexOf("Великобритания"));

        ArrayList <String> states2 = new ArrayList<String>(states);

        states.clear();

        System.out.printf("В списке states2 содержится %d стран(ы)\n", states2.size());

        for (String state : states2){
            System.out.print(state + " ");
        }

        states2.clear();

        ArrayList <Car> cars = new ArrayList<>();

        cars.add(new Car("Civic", "Japan"));
        cars.add(new Car("Mark II", "Japan"));
        cars.add(new Car("ВАЗ 2107", "Russia"));

        for (Car car : cars){
            System.out.print("\n"+ car.toString());
        }

        cars.clear();
    }
}
